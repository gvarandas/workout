<%= simple_form_for @work do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :activity_id, collection: Activity.all, :label_method => :activity_name, label: 'Activity' %>
  </div>
  <div class="field">
    <%= f.input :amount, label: 'Amount', :wrapper_html => { :style => 'display: inline' } %>
    <%= f.input :scale, :collection => ['Kilometers', 'Meters', 'Minutes', 'Series'], label: false, :wrapper_html => { :style => 'display: inline' } %>
  </div>
  <div class="field">
    <%= f.input :calories, label: 'Calories' %>
  </div>
  <div class="field">
    <%= f.input :date, label: 'Date' %>
  </div>
  <div class="field">
    <%= f.association :user %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
